    form.cards-form(action='#' method='POST' enctype='multipart/form-data' autocomplete='off')
      h2.cards__title.cards__title--filter
        b.cards__title-mark &#8470;
        | 888
        span.cards__span-left люкс
        span.cards__span-right 9 990₽
          small.cards__small-right  в сутки
      //- Прибытие
      .dropdown-date.dropdown-date--filter
            .dropdown
              h4.dropdown__title Прибытие
              ul.dropdown__list
                li.dropdown__item
                  a.dropdown__link(href="#") 19.08.2019
            .dropdown
              h4.dropdown__title Выезд
              ul.dropdown__list
                li.dropdown__item
                  a.dropdown__link(href="#") 23.08.2019
      //- Dropdown количество гостей
      .dropdown
        h4.dropdown__title Гости
        ul.dropdown__list
          li.dropdown__item
            a.dropdown__link(href="#") 3 гостя
            ul.dropdown__list--sub
              li.dropdown__item--sub
                a.dropdown__link--sub(href="#") Взрослые
                  span.dropdown__link--span 2
              li.dropdown__item--sub
                a.dropdown__link--sub(href="#") Дети
                  span.dropdown__link--span 1
              li.dropdown__item--sub
                a.dropdown__link--sub(href="#") Младенцы
                  span.dropdown__link--span 0
              li.dropdown-button__item
                a(href="#!").dropdown-button__link Очистить
                a(href="#!").dropdown-button__link Применить

      //- Расчет стоимости
      dl.cost-calculation
        .cost-calculation__item
          dt.cost-calculation__term 9 990₽ х 4 суток
          dd.cost-calculation__nomber 39 960&#8381;
        .cost-calculation__item
          dt.cost-calculation__term Сбор за услуги: скидка 2 179&#8381;
            i.info
          dd.cost-calculation__number 0 &#8381;
        .cost-calculation__item
          dt.cost-calculation__term Сбор за дополнительные услуги
            i.info
          dd.cost-calculation__number 300 &#8381;
        .cost-calculation__item.cost-calculation__item--total-sum
          dt.cost-calculation__total Итого
          dd.cost-calculation__sum 38 081&#8381;
      .button-big.button-big--card
        a(href="#!").button.button--wide Забронировать
          svg.button--svg(width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg")
            path(d="M9 0.984375L17.0156 9L9 17.0156L7.59375 15.6094L13.1719 9.98438H0.984375V8.01562H13.1719L7.59375 2.39062L9 0.984375Z" fill="url(#paint0_linear)")

  //- Вход
  section.cards.cards--input
    h6.visually-hidden Card input
    form.cards-form(action='#' method='POST' enctype='multipart/form-data' autocomplete='off')
      fieldset.form__fieldset.form__fieldset--input
          legend.form__legend.cards__title.cards__title--input Войти
          ul.form__list.form__list--input
            li.form__item.form__item--input
              label.form__label.visually-hidden(for='field-email') Поле для ввода email адреса
              input#field-email.form__input(type='text' name='email' placeholder='Email')
            li.form__item.form__item--input
              label.form__label.visually-hidden(for='field-password') Поле для ввода пароля
              input#field-password.form__input(type='password' name='password' placeholder='Пароль')
          .button-big.button-big--card
            a(href="#!").button.button--wide Войти
              svg.button--svg(width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg")
                path(d="M9 0.984375L17.0156 9L9 17.0156L7.59375 15.6094L13.1719 9.98438H0.984375V8.01562H13.1719L7.59375 2.39062L9 0.984375Z" fill="url(#paint0_linear)")
      .cards__sign-in.cards__sign-in--input
        p.cards__sign-in-text Нет аккаунта на Toxin
        button(type="button").button.button--default.button--input Создать
